<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Deterministic>false</Deterministic>
    <Product>CoinMarketCap .NET</Product>
    <Authors>Defines Fineout</Authors>
    <Company>Defines Fineout</Company>
    <Description>A free, open-source .NET client SDK for the CoinMarketCap API.</Description>
    <Copyright>© 2020 Defines Fineout</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/definesfineout/coinmarketcap.net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/definesfineout/coinmarketcap.net.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Version>0.2.0</Version>
    <AssemblyVersion>0.2.*</AssemblyVersion>
    <FileVersion>0.2</FileVersion>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageIcon>coinmarketcap-logo.png</PackageIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="img\coinmarketcap-logo.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>